svg-sprite-position($svg-sprite) {
    $svg-sprite-offset-x = $svg-sprite[0];
    $svg-sprite-offset-y = $svg-sprite[1];
    background-position: $svg-sprite-offset-x  $svg-sprite-offset-y;
}

bg-svg($svg-sprite, $repeat = no-repeat) {
    background-image: url('%=static=%svg-sprite/{{imgName}}');
    svg-sprite-position($svg-sprite);
    width: $svg-sprite[2];
    height: $svg-sprite[3];
    background-repeat: $repeat;
}
