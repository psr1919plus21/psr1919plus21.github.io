svg-sprite-position($svg-sprite) {
    $svg-sprite-offset-x = $svg-sprite[2];
    $svg-sprite-offset-y = $svg-sprite[3];
    background-position: $svg-sprite-offset-x  $svg-sprite-offset-y;
}

svg-sprite-image($svg-sprite) {
    background-image: url('%=static=%rastered-svg-sprite/' + $svg-sprite[8]);
}

bg-svg($svg-sprite, $repeat = no-repeat) {
    svg-sprite-image($svg-sprite);
    svg-sprite-position($svg-sprite);
    width: $svg-sprite[4];
    height: $svg-sprite[5];
    background-repeat: $repeat;
}
